@incollection{Melcher.2020,
 abstract = {Der Beitrag stellt die Frage, welche Bedeutung politisches Wissen für die politische Legitimität konkreter Aspekte und die generalisierte politische Unterstützung von Parteien und Wahlen hat. Die Ergebnisse zeigen dreierlei. Erstens verweisen die Ergebnisse darauf, dass die Bürgerinnen konkrete Beurteilungen im Sinne eines Saldos zu einem generalisierten Urteil verdichten. Zweitens zeigen sie, dass politisches Wissen nach den spezifischen Beurteilungen von Legitimität den zweitstärksten Einfluss auf die generalisierte Unterstützung von Parteien und Wahlen hat. Drittens schließlich ergeben sich zwar Unterschiede nach Alter, Geschlecht, Bildung und Ost-West, sie sind aber inhaltlich wenig bedeutsam. Für die Zukunft der Demokratie verweisen die Ergebnisse darauf, dass politisches Wissen im positiven Sinne dazu beiträgt, dass spezifische Urteile in positiver Weise in generalisierte Unterstützung überführt werden. Generalisierte Unterstützung ist der Puffer, den die Demokratie gegenüber den alltäglichen Unbilden des politischen Prozesses braucht. Für die Persistenz der Demokratie und ihre Abwehrfähigkeit gegenüber ihren Kritikern ist es entscheidend, dass dieser Puffer aufgebaut wird. Politisches Wissen leistet dazu einen wichtigen Beitrag.},
 address = {Wiesbaden},
 author = {Melcher, Reinhold and Weßels, Bernhard},
 booktitle = {Legitimitätsprobleme: Zur Lage der Demokratie in Deutschland},
